<div class="row">
  <div class="col-md-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h5><strong><i class="fa fa-undo"></i>
          Recover Deleted Files</strong></h5>
      </div>

      <div class="panel-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Content</th>
              <th>Deleted by</th>
              <th>At</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @pages.each do |page_version| %>
              <%- page = page_version.reify %>
              <tr>
                <td><%= page.id %></td>
                <td><%= page.title %></td>
                <td><%=raw page.content %></td>
                <td><%= find_version_author_name(page_version) %></td>
                <td><%= page.created_at %></td>
                <td><%= link_to 'Bring back', bringback_version_path(page_version), method: 'PATCH' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Back', pages_path %>
      </div>
    </div>
  </div>
</div>
